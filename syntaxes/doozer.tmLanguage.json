{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Doozer script language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#modifiers"
		},
		{
			"include": "#invalid"
		}
		
	],
	"repository": {
		"comments": {
			"patterns": [{
					"begin": "//",
					"end": "\\n",
					"name": "comment.line.double-slash"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(click|type|takeScreenshot|url|set|navigateTo|refresh|sendKeys|navigateBack|navigateForward|assertCurrentUrl|wait|waitForElement)\\b"
			}, {
				"name": "entity.name.tag",
				"match": "\\b(selector|args|name|value)\\b"
			}]
		},
		"strings": {
			"name": "variable.strings",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
					"name": "constant.character.escape",
					"match": "\\\\."
			},{
				"begin": "\\${",
				"end": "}",
				"name": "entity.name.operator.custom-literal"
		}]
		},
		"modifiers": {
			"patterns": [{
				"match": "\\?",
				"name": "entity.name.operator.custom-literal"
			}]
		},
		"variables": {
			"patterns":[{
				"begin": "\\${",
				"end": "}",
				"name": "entity.name.operator.custom-literal"
			}]
		},
		"invalid": {
			"name": "invalid.illegal",
			"match": "[a-zA-Z$_][\\.a-zA-Z0-9$_]*"
		}
	},
	"scopeName": "source.doozer"
}