{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Doozer script language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#modifiers"
		}
		
	],
	"repository": {
		"comments": {
			"patterns": [{
					"begin": "//",
					"end": "\\n",
					"name": "comment.line.double-slash.doozer"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "storage.type.doozer",
				"match": "\\b(click|type|takeScreenshot|url|set|navigateTo|refresh|sendKeys|navigateBack|navigateForward|assertCurrentUrl|wait|waitForElement)\\b"
			}, {
				"name": "entity.name.type.class.doozer",
				"match": "\\b(selector|args|name|value)\\b"
			}]
		},
		"strings": {
			"name": "variable.strings.doozer",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
					"name": "variable.doozer",
					"match": "\\\\."
			},{
				"begin": "\\${",
				"end": "}",
				"name": "entity.name.operator.custom-literal.doozer"
		}]
		},
		"modifiers": {
			"patterns": [{
				"match": "\\?",
				"name": "entity.name.operator.custom-literal.doozer"
			}]
		},
		"variables": {
			"patterns":[{
				"begin": "\\${",
				"end": "}",
				"name": "entity.name.operator.custom-literal.doozer"
			}]
		}
	},
	"scopeName": "source.doozer"
}